{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "rootDir": "huedoo",
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": [
    "huedoo/**/*"
  ],
  "exclude": [
    "node_modules",
    "compile"
  ]
}